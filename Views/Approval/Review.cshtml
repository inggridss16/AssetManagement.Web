@model AssetManagement.Web.Models.AssetViewModel

@{
    ViewData["Title"] = "Review Asset";
}

<h1>Review Asset</h1>
<hr />

<div class="row">
    <div class="col-md-7">
        <ul class="nav nav-tabs" id="assetReviewTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="details-tab" data-bs-toggle="tab" data-bs-target="#details" type="button" role="tab" aria-controls="details" aria-selected="true">Asset Details</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="maintenance-tab" data-bs-toggle="tab" data-bs-target="#maintenance" type="button" role="tab" aria-controls="maintenance" aria-selected="false">Maintenance History</button>
            </li>
        </ul>
        <div class="tab-content" id="assetReviewTabContent">
            <div class="tab-pane fade show active" id="details" role="tabpanel" aria-labelledby="details-tab">
                <div class="mt-3">
                    <fieldset disabled>
                        <div class="form-group mb-3">
                            <label asp-for="AssetName" class="control-label"></label>
                            <input asp-for="AssetName" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Category" class="control-label"></label>
                            <input asp-for="Category" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Subcategory" class="control-label"></label>
                            <input asp-for="Subcategory" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ResponsiblePersonId" class="control-label"></label>
                            <select asp-for="ResponsiblePersonId" asp-items="Model.ResponsiblePersonOptions" class="form-control"></select>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Status" class="control-label"></label>
                            <input asp-for="Status" class="form-control" />
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AssetValue" class="control-label"></label>
                            <input asp-for="AssetValue" class="form-control" disabled />
                        </div>

                    </fieldset>
                </div>
            </div>
            <div class="tab-pane fade" id="maintenance" role="tabpanel" aria-labelledby="maintenance-tab">
                <div class="mt-3">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Cost</th>
                                <th>Vendor</th>
                                <th>Comments</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.MaintenanceRecords != null && Model.MaintenanceRecords.Any())
                            {
                                @foreach (var record in Model.MaintenanceRecords)
                                {
                                    <tr>
                                        <td>@record.MaintenanceDate.ToString("yyyy-MM-dd")</td>
                                        <td>@record.MaintenanceType</td>
                                        <td>@record.MaintenanceCost.ToString("C")</td>
                                        <td>@record.Vendor</td>
                                        <td>@record.Comments</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No maintenance records found for this asset.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5">
        <h4>Approval Action</h4>
        <hr />
        <form asp-action="SubmitReview" method="post">
            <input type="hidden" asp-for="Id" name="AssetId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label for="comments" class="control-label">Comments</label>
                <textarea name="Comments" class="form-control" rows="4" placeholder="Optional comments for your decision."></textarea>
            </div>
            <div class="form-group">
                <button type="submit" name="Action" value="Approve" class="btn btn-success">Approve</button>
                <button type="submit" name="Action" value="Reject" class="btn btn-danger">Reject</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}