@model AssetManagement.Web.Models.MaintenanceRecordViewModel

@{
    ViewData["Title"] = "Delete Maintenance Record";
}

<h1>Delete Maintenance Record</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Maintenance Record</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.MaintenanceDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.MaintenanceType</dd>

        <dt class="col-sm-3">Cost</dt>
        <dd class="col-sm-9">@Model.MaintenanceCost.ToString("C")</dd>

        <dt class="col-sm-3">Vendor</dt>
        <dd class="col-sm-9">@Model.Vendor</dd>

        <dt class="col-sm-3">Comments</dt>
        <dd class="col-sm-9">@Model.Comments</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" name="assetId" value="@Model.LinkedAssetId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Asset" asp-action="Edit" asp-route-id="@Model.LinkedAssetId">Back to Asset</a>
    </form>
</div>