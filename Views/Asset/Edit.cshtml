@model AssetManagement.Web.Models.AssetViewModel

@{
    ViewData["Title"] = "Edit Asset";
}

<h1>Edit Asset</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @* --- Your form fields are unchanged here --- *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="AssetName" class="control-label"></label>
                <input asp-for="AssetName" class="form-control" />
                <span asp-validation-for="AssetName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" asp-items="Model.CategoryOptions" class="form-control" id="categoryDropdown">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Subcategory" class="control-label"></label>
                <select asp-for="Subcategory" class="form-control" id="subcategoryDropdown">
                    <option value="">-- Select Category First --</option>
                </select>
                <span asp-validation-for="Subcategory" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ResponsiblePersonId" class="control-label"></label>
                <select asp-for="ResponsiblePersonId" asp-items="Model.ResponsiblePersonOptions" class="form-control">
                    <option value="">-- Select Responsible Person --</option>
                </select>
                <span asp-validation-for="ResponsiblePersonId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/asset-form.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            var initialCategory = "@Model.Category";
            var initialSubcategory = "@Model.Subcategory";

            // Step 1: Manually populate the subcategory dropdown based on the initial category.
            // This ensures the options exist before we try to set the value.
            updateSubcategoryDropdown(initialCategory, $("#subcategoryDropdown"));

            // Step 2: Now that the options are guaranteed to be in the DOM, set the selected value.
            $("#subcategoryDropdown").val(initialSubcategory);
        });
    </script>
}