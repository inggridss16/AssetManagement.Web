@model IEnumerable<AssetManagement.Web.Models.AssetViewModel>
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Asset List";
    var userRole = HttpContextAccessor.HttpContext?.Session.GetString("UserRole");
}

<h1>Asset List</h1>


@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<div class="d-grid gap-2 d-md-flex justify-content-md-end">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Action</th>
            <th>Asset ID</th>
            <th>Asset Name</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        @if (item.Status == "New")
                        {
                            <form asp-action="AskForReview" asp-route-id="@item.Id" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-sm btn-info">Ask for Review</button>
                            </form>
                        }

                        @if (userRole?.ToLower() == "manager")
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        }
                        else
                        {
                            <a class="btn btn-sm btn-danger disabled" title="You do not have permission to delete">Delete</a>
                        }
                    </td>
                    <td>@item.Id</td>
                    <td>@item.AssetName</td>
                    <td>@item.Category</td>
                    <td>@item.Status</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No assets found.</td>
            </tr>
        }
    </tbody>
</table>