@model AssetManagement.Web.Models.AssetViewModel

@{
    ViewData["Title"] = "Delete Asset";
}

<h1>Delete Asset</h1>

<h3>Are you sure you want to delete this? This will also remove all associated maintenance records.</h3>
<div>
    <h4>Asset Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <h4 class="mt-4">Associated Maintenance Records to be Deleted</h4>
    <hr />
    @if (Model.MaintenanceRecords != null && Model.MaintenanceRecords.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Type</th>
                    <th>Cost</th>
                    <th>Vendor</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var record in Model.MaintenanceRecords)
                {
                    <tr>
                        <td>@record.MaintenanceDate.ToString("yyyy-MM-dd")</td>
                        <td>@record.MaintenanceType</td>
                        <td>@record.MaintenanceCost.ToString("C")</td>
                        <td>@record.Vendor</td>
                        <td>@record.Comments</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No maintenance records found for this asset.</p>
    }

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>